  },
  "engines": {
    "node": ">= 10.5.0",
    "npm": ">= 5.6.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
